<div class="tweet-edit">
  <%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :tweet_title, placeholder: "Enter title..." %>
  </div><br>

  <div class="field">
    <%= form.text_area :tweet_content, placeholder: "Enter content here...", :cols => 60, :rows => 7 %>
  </div><br>

  <div class="field">
    <%= form.file_field :cover_picture %>
  </div><br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

</div>